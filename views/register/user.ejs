<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registracija</title>
    <link rel='stylesheet' href='/stylesheets/register.css'/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script defer src="/public/javascripts/password.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 form-container bg-light">
            <form method="post" action="/register/user" id="form">
                <p class="text-danger" id="message"><%= message %></p>
                <input type="text" class="form-control" placeholder="Ime i prezime" id="name" name="name" required>
                <input type="email" class="form-control" placeholder="Email" id="email" name="email" required>
                <div class="input-group">
                    <input type="password" class="form-control hide-password" placeholder="Lozinka" id="password"
                           name="password" required>
                    <div class="input-group-append">
                        <div class="input-group-text" id="eye"><i class="fa fa-eye"></i></div>
                    </div>
                </div>
                <div class="interests-input d-flex justify-content-between">
                    <label for="interests">Odaberite interesovanja: </label>
                    <select multiple class="selectpicker" id="interests" name="interests" required>
                        <% interests.forEach(interest => { %>
                            <option value="<%= interest.id %>"><%= interest.interest %></option>
                        <% }) %>
                    </select>
                </div>
                <p class="form-control btn btn-primary" onclick="register()">Registruj se</p>
            </form>
        </div>
    </div>
</div>
</body>
<script>
    const register = () => {
        if ($('#interests').val().length === 0 || $('#email').val() === '' || $('#name').val() === '')
            return
        const password = $('#password').val()
        if (!isPasswordValid(password))
            $('#message').text('Lozinka mora da ima između 8 i 20 karaktera, uključujući veliko i malo slovo')
        else $('#form').submit()
    }
</script>
</html>
