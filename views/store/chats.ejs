<!DOCTYPE html>
<html lang="en">
<head>
    <title>Razgovori</title>
    <meta charset="UTF-8"/>
    <link rel='stylesheet' href='/stylesheets/header.css'/>
    <link rel='stylesheet' href='/stylesheets/store.css'/>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/footer.css'/>
    <link rel='stylesheet' href='/stylesheets/chat.css'/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script defer src="/public/javascripts/header.js"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
</head>
<body>
<header>
    <%- include('store-header.ejs') %>
</header>
<main>
    <section>
        <div class="row">
            <div class="col-md-8 offset-md-2 bg-light chat-list">
                <hr>
                <% if(chats.length === 0) { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-center">
                                Nemate razgovora
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <% chats.forEach(chat => { %>
                        <div class="card mb-3" id="<%= chat.contact_id %>">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex flex-row align-items-center">
                                        <div>
                                            <img
                                                    src="<%= chat.pfp_url %>"
                                                    class="img-fluid rounded-3" alt="Trgovina" style="width: 65px;">
                                        </div>
                                        <div class="ms-3">
                                            <h5><%= chat.name %></h5>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center">
                                        <a href="/store/chat/<%= id %>/<%= chat.contact_id %>"
                                           id="show-product">
                                            <button class="btn btn-secondary">Otvori</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <%}%>
            </div>
        </div>
    </section>
</main>
<footer>
    <%- include('../footer.ejs') %>
</footer>
<script>

    $(document).ready(() => {
        $('#search-addon').click(() => {
            $('#search-form').submit()
        })
    })
</script>
</body>
</html>