<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kuponi</title>
    <meta charset="UTF-8"/>
    <link rel='stylesheet' href='/stylesheets/header.css'/>
    <link rel='stylesheet' href='/stylesheets/user.css'/>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/admin.css'/>
    <link rel='stylesheet' href='/stylesheets/footer.css'/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script defer src="/public/javascripts/header.js"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
</head>
<body>
<header>
    <%- include('admin-header.ejs') %>
</header>
<main>
    <div class="position-relative">
        <div class="toast float-end cart-toast">
            <div class="toast-header">
                <strong class="me-auto">Notifikacija</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                <p id="toast-text"></p>
            </div>
        </div>
    </div>
    <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-12 col-xl-9">
                    <div class="card">
                        <table class="table categories-table display">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Iznos (%)</th>
                                <th>Obriši</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% coupons.forEach(coupon => { %>
                                <tr id="<%= coupon.id %>">
                                    <td><%= coupon.coupon %></td>
                                    <td><%= coupon.discount %>%</td>
                                    <td>
                                        <button class="btn btn-danger" onclick="deleteCoupon(<%= coupon.id %>)">
                                            Obriši
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" id="coupon"
                                           placeholder="Novi kupon" maxlength="20">
                                </td>
                                <td>
                                    <input type="number" class="form-control" id="discount"
                                           placeholder="Iznos popusta" max="50" min="5">
                                </td>
                                <td>
                                    <button class="btn btn-success" onclick="addCoupon()">Dodaj</button>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<footer>
    <%- include('../footer.ejs') %>
</footer>
<script>

    const addCoupon = () => {
        const coupon = $('#coupon').val()
        const discount = $('#discount').val()
        if (coupon.length < 5) {
            $('#toast-text').text('Kupon mora biti duži od 5 karaktera')
            $('.toast').toast('show')
            return
        }
        if (discount < 5 || discount > 50 || !discount) {
            $('#toast-text').text('Iznos popusta mora biti između 5 i 50%')
            $('.toast').toast('show')
            return;
        }
        axios.post(`/admin/add-coupon`, {
            coupon: coupon,
            discount: discount
        })
            .then(response => {
                if (response.status === 200)
                    location.reload()
            })
            .catch(error => {
                $('#toast-text').text('Unešeni kupon se već koristi')
                $('.toast').toast('show')
            })
    }

    const deleteCoupon = id => {
        axios.post(`/admin/delete-coupon/${id}`, {})
            .then(response => {
                if (response.status === 200)
                    $(`#${id}`).remove()
            })
            .catch(error => {
                console.log(error)
            })
    }
</script>
</body>
</html>